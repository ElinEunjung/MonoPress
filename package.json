{
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "dev": "concurrently npm:dev:client npm:dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "prepare": "husky",
    "husky": "concurrently \"npm run lint:client\" \"npm run test:server\"",
    "lint:client": "cd client && npm run lint",
    "prettier:write": "prettier --write \"{client,server}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "postinstall": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install --include=dev",
    "install:server": "cd server && npm install",
    "heroku:build:client": "cd client && npm run build",
    "heroku:start:server": "cd server && npm run start",
    "start": "npm run heroku:build:client && npm run heroku:start:server"
  }
}
